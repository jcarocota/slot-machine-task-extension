{
  // https://www.typescriptlang.org/tsconfig#compilerOptions
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es2020"],
    "module": "es2022",
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "target": "es2022",
    "types": ["node"],
    "rootDir": "./src",
    "outDir": "./dist",
    "typeRoots": [
      "node_modules/@types"
  ]
  },
  "include": ["src/**/*", "src", "custom.d.ts"],
  "exclude": ["node_modules"]
}